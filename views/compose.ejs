<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="mb-3">
    <label class="fw-bold" for="title">Title</label>
    <input class="form-control" type="text" name="title" id="title">
  </div>
  <div class="mb-3">
    <label class="fw-bold" for="post">Post</label>
    <textarea rows="6" cols="80" class="form-control span6" name="post"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>

<%- include("partials/footer"); -%>
